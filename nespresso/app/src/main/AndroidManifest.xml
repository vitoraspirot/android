<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.com.cwi.nespresso">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nespresso"
        tools:targetApi="31">
        <activity
            android:name=".bag.BagActivity"
            android:exported="false" />
        <activity
            android:name=".favorites.FavoritesActivity"
            android:exported="false" />
        <activity
            android:name=".products.accessorie.AccessorieActivity"
            android:exported="false" />
        <activity
            android:name=".products.machine.MachineActivity"
            android:exported="false" />
        <activity
            android:name=".products.coffee.CoffeeActivity"
            android:exported="false" />
        <activity
            android:name=".products.ProductsActivity"
            android:exported="true"
            android:theme="@style/Theme.Nespresso.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>